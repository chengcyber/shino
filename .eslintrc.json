{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "jquery": true
  },
  "plugins": [
    "angular"
  ],
  "globals": {
    "angular": true,
    "faker": true
  },
  "rules": {
    "indent": ["error", 4],

    "no-console": 1,

    "angular/controller-name": [
      2,
      "/[A-Z].*Controller$/"
    ]

  }
}
